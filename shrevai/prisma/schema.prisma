generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
  chatbots  Chatbot[]
  users     User[]
}

model Employee {
  id         Int       @id @default(autoincrement())
  employeeId String    @unique @default(uuid())
  username   String
  email      String    @unique
  name       String
  password   String
  role       String
  companyId  Int? // Make companyId optional
  company    Company?  @relation(fields: [companyId], references: [id])
  chatbots   Chatbot[] @relation("ChatbotOwners")
  isLive     Boolean   @default(false)
}

model Chatbot {
  id          Int              @id @default(autoincrement())
  chatbotName String
  companyId   Int
  initmessage String           @default("")
  initcta     String           @default("{}")
  type        String           @default("")
  tags        String?
  data        Bytes?
  company     Company          @relation(fields: [companyId], references: [id])
  owners      Employee[]       @relation("ChatbotOwners")
  sessions    ChatbotSession[]
  modifiedAt  DateTime         @default(now())
  createdAt   DateTime         @default(now())
  isActive    Boolean          @default(true)
}

model ChatbotSession {
  id        Int       @id @default(autoincrement())
  chatbotId Int
  chatbot   Chatbot   @relation(fields: [chatbotId], references: [id])
  sessionId String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  liveAgent Boolean
  type      String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id         Int            @id @default(autoincrement())
  content    String
  senderType String // 'user', 'chatbot', 'employee'
  senderId   Int // ID of the user, chatbot, or employee
  session    ChatbotSession @relation(fields: [id], references: [id])
  createdAt  DateTime       @default(now())
}

model User {
  id        String           @id
  username  String?
  firstname String?
  lastname  String?
  metadata  String?
  country   String?
  socials   String?
  email     String?
  password  String?
  phoneno   String?
  address   String?
  companyId Int
  company   Company          @relation(fields: [companyId], references: [id])
  sessions  ChatbotSession[]
  createdAt DateTime         @default(now())
}
